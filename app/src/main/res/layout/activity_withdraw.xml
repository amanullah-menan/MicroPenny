<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WithdrawActivity"
    android:background="@drawable/loginbackground">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/penny"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/titleW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WITHDRAW"
        android:textSize="25sp"
        android:textColor="@color/pennyColor"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@+id/logo"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textAlignment="center"
        android:text="Please read terms and conditions before withdraw in support center."
        android:textColor="@color/red"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="100dp"
        android:background="@drawable/register"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Payment Type (Rocket / Bkash / Flexiload)"
        android:inputType="text"
        android:textColorHint="@color/midwhite"
        android:textSize="16sp"
        android:textStyle="bold"

        />
    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type"
        android:layout_marginTop="20dp"
        android:background="@drawable/register"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Enter the number"
        android:inputType="number"
        android:textColorHint="@color/midwhite"
        android:textSize="16sp"
        android:textStyle="bold"

        />
    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number"
        android:layout_marginTop="20dp"
        android:background="@drawable/register"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Amount"
        android:inputType="number"
        android:textColorHint="@color/midwhite"
        android:textSize="16sp"
        android:textStyle="bold"

        />
    <Button
        android:id="@+id/withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amount"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/gologin"
        android:text="Submit Request"
        android:padding="15dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/midwhite"
        />

</RelativeLayout>