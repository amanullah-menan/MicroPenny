<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/pennyColor"
    android:layout_height="match_parent"
    tools:context=".YoutubeActivity">

    <TextView
        android:id="@+id/spendTimeY"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="5dp"
        android:text="T 00:00"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textStyle="bold"


        />
    <TextView
        android:id="@+id/nextPennyY"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="5dp"
        android:text="Next Penny in 00:00"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textStyle="bold"


        />

    <TextView
        android:id="@+id/userBalanceY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="27dp"
        android:text="00.000000 MP"
        android:textAlignment="center"
        android:textStyle="bold"


        android:textSize="12sp" />
    <WebView
        android:id="@+id/youtubeWebY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/userBalanceY"
        android:layout_marginTop="5dp"

        />

</RelativeLayout>